= render 'depp/shared/title', name: t(:check_domain)

.row
  .col-md-12
    = render 'check_form'

%hr

.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        %h3.panel-title= t('result')
      .panel-body
        %dl.dl-horizontal
          %dt= t('name')
          %dd= @data.css('name').text

          - name = @data.css('name').first
          %dt= t('available')
          %dd= name['avail']

          - if @data.css('reason').text.present?
            %dt= t('reason')
            %dd= @data.css('reason').text

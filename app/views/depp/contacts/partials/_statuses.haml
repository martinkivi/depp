.panel.panel-default
  .panel-heading
    %h3.panel-title= t(:statuses)
  .table-responsive
    %table.table.table-hover.table-bordered.table-condensed
      %thead
        %tr
          %th{class: 'col-xs-6'}= t(:status)
          %th{class: 'col-xs-6'}= t(:description)
      %tbody
        - statuses.each do |s|
          %tr
            %td= s.first
            %td= s.second


